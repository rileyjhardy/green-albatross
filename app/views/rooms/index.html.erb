<p style="color: green"><%= notice %></p>

<% content_for :title, "Rooms" %>

<h1>Rooms</h1>

<div id="rooms">
  <% @rooms.each do |room| %>
    <%= render room %>
    <p>
      <%= link_to "Show this room", room %>
      <%= button_to "Enter this room", enter_room_path(room), method: :post %>
    </p>
  <% end %>
</div>

<%= link_to "New room", new_room_path %>
